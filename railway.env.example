# === RAILWAY ENVIRONMENT VARIABLES ===
# Copy these to your Railway project environment variables

# === BASIC CONFIGURATION ===
PORT=8000
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# === DATABASE ===
# Railway will provide DATABASE_URL automatically when you add PostgreSQL
DATABASE_URL=postgresql://user:password@host:5432/database

# === REDIS ===
# Railway will provide REDIS_URL automatically when you add Redis
REDIS_URL=redis://host:6379

# === APP SETTINGS ===
PROJECT_NAME=Son1k Suno MVP
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production

# === CORS SETTINGS ===
CORS_ORIGINS=https://your-app-name.railway.app

# === JWT SETTINGS ===
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === SUNO INTEGRATION ===
SUNO_SESSION_ID=your_suno_session_id
SUNO_COOKIE=your_suno_cookie_value
SUNO_BASE_URL=https://studio-api.suno.ai
SUNO_TIMEOUT=120

# === RATE LIMITING ===
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_BURST=5

# === CELERY SETTINGS ===
CELERY_BROKER_URL=redis://host:6379/0
CELERY_RESULT_BACKEND=redis://host:6379/0

# === FILE STORAGE ===
UPLOAD_DIR=/app/storage/uploads
AUDIO_DIR=/app/storage/audio
MAX_FILE_SIZE=10485760

# === WEBSOCKET SETTINGS ===
WEBSOCKET_HEARTBEAT_INTERVAL=30

# === SELENIUM SETTINGS (for Suno automation) ===
SELENIUM_HUB_URL=http://selenium:4444/wd/hub
CHROME_OPTIONS=--headless,--no-sandbox,--disable-dev-shm-usage

# === MONITORING ===
LOG_LEVEL=INFO
ENABLE_METRICS=true

# === EXTENSION SETTINGS ===
EXTENSION_SECRET=your-extension-secret-key
ALLOWED_EXTENSION_IDS=ghpilnilpmfdacoaiacjlafeemanjijn,bfbmjmiodbnnpllbbbfblcplfjjepjdn