# Son1k Production Environment Variables
# Copiar a .env.production y configurar con valores reales

# Configuración básica
NODE_ENV=production
DOMAIN=son1kvers3.com
API_DOMAIN=api.son1kvers3.com

# Base de datos PostgreSQL
DATABASE_URL=postgresql://son1k_user:PASSWORD_HERE@postgres:5432/son1k_prod
POSTGRES_DB=son1k_prod
POSTGRES_USER=son1k_user
POSTGRES_PASSWORD=GENERATE_SECURE_PASSWORD

# Redis Cache
REDIS_URL=redis://redis:6379

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY_HERE  
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Stripe Price IDs (configurar en Stripe Dashboard)
STRIPE_PRICE_BASIC=price_basic_monthly_REPLACE_ME
STRIPE_PRICE_PRO=price_pro_monthly_REPLACE_ME
STRIPE_PRICE_UNLIMITED=price_unlimited_monthly_REPLACE_ME

# JWT y Seguridad
JWT_SECRET=GENERATE_RANDOM_256_BIT_SECRET_HERE
SECRET_KEY=ANOTHER_RANDOM_SECRET_KEY_HERE

# Suno API (configurar después del setup)
SUNO_API_KEY=YOUR_SUNO_API_KEY_HERE
SUNO_SELENIUM_URL=http://selenium:4444

# Configuración de aplicación
LOG_LEVEL=info
WORKERS=2
MAX_WORKERS=4
ENABLE_METRICS=true

# CORS y Seguridad
CORS_ORIGINS=https://son1kvers3.com,https://www.son1kvers3.com
ALLOWED_HOSTS=son1kvers3.com,api.son1kvers3.com,www.son1kvers3.com

# Configuración de archivos y uploads
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/opt/son1k/uploads
STATIC_PATH=/opt/son1k/static

# Email (opcional - para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@son1kvers3.com
SMTP_PASSWORD=YOUR_EMAIL_PASSWORD
FROM_EMAIL=Son1k <noreply@son1kvers3.com>

# Analytics y Monitoreo (opcional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn-here
ENABLE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_REQUESTS_PER_DAY=1000

# Cache y Performance
CACHE_TTL=3600
ENABLE_GZIP=true
ENABLE_STATIC_CACHE=true

# Selenium y Automation
SV_SELENIUM_URL=http://selenium:4444
SV_HEADLESS=1
SV_NO_QUIT=0
NOVNC_PUBLIC_URL=https://your-novnc-url-here

# Backup y Storage (opcional)
AWS_ACCESS_KEY_ID=YOUR_AWS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET
S3_BUCKET=son1k-backups
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM